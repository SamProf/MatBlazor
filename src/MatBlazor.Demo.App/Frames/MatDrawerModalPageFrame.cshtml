@page "/MatDrawerModalFrame"
@using MatBlazor.Components.MatDrawer

<MatDrawerContainer Style="width: 100vw; height: 100vh;">
    <MatDrawer bind-Opened="@Opened" Mode="@MatDrawerMode.Modal">
        Drawer Content
    </MatDrawer>
    <MatDrawerContent>
        <div>
            <MatButton OnClick="@((e) => ButtonClicked())">Open Menu</MatButton>
        </div>
        <p>Page Content</p>
    </MatDrawerContent>
</MatDrawerContainer>


@functions
{
    bool Opened = true;

    void ButtonClicked()
    {
        Opened = !Opened;
    }

}