@namespace MatBlazor
@inherits BaseMatDomComponent

<div class="@ClassMapper.AsString()" style="@StyleMapper.AsString()" @ref="Ref" @attributes="Attributes" Id="@Id">
    <div class="mdc-chip__ripple"></div>
    @if (LeadingIcon != null)
    {
       <i class="material-icons mdc-chip__icon mdc-chip__icon--leading">@LeadingIcon</i>
    }
    @if (IsCheckable)
    {
        <span class="mdc-chip__checkmark">
            <svg class="mdc-chip__checkmark-svg" viewBox="-2 -3 30 30">
                <path class="mdc-chip__checkmark-path" fill="none" stroke="black"
                      d="M1.73,12.91 8.1,19.28 22.79,4.59"/>
            </svg>
        </span>
    }
    <div class="mdc-chip__text">@Label</div>
    @if (TrailingIcon != null)
    {
       <i class="material-icons mdc-chip__icon mdc-chip__icon--trailing mdc-chip-trailing-action">@TrailingIcon</i>
    }
</div>